    <CornerRadius x:Key="CornerRadius.VirtualKeyboardKey">2</CornerRadius>

    <DropShadowEffect x:Key="SplashDropShadowEffect"
                      BlurRadius="32"
                      Direction="270"
                      Opacity="0.5"
                      ShadowDepth="3" />

    <DropShadowEffect x:Key="PrimaryDropShadowEffect"
                      BlurRadius="16"
                      Direction="270"
                      Opacity="0.1"
                      ShadowDepth="1" />

    <DropShadowEffect x:Key="DraftingButtonShadowEffect"
                      BlurRadius="32"
                      Direction="-90"
                      Opacity="0.05"
                      ShadowDepth="12" />

    <DropShadowEffect x:Key="PopupDropShadowEffect"
                      BlurRadius="16"
                      Direction="-90"
                      Opacity="0.15"
                      ShadowDepth="0" />

    <DropShadowEffect x:Key="SmallDropShadowEffect"
                      BlurRadius="6"
                      Opacity="0.2"
                      ShadowDepth="3" />

    <DropShadowEffect x:Key="KeyboardDropShadowEffect"
                      BlurRadius="3"
                      Direction="-90"
                      Opacity="0.15"
                      ShadowDepth="2" />

    <DropShadowEffect x:Key="TabItemDropShadowEffect"
                      BlurRadius="12"
                      Direction="-45"
                      Opacity="0.2"
                      ShadowDepth="3" />
